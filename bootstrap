#!/bin/bash

function __curl() {
  read -r proto server path <<<"$(printf '%s' "${1//// }")"
  if [ "$proto" != "http:" ]; then
    printf >&2 "sorry, %s supports only http\n" "${FUNCNAME[0]}"
    return 1
  fi
  DOC=/${path// //}
  HOST=${server//:*}
  PORT=${server//*:}
  [ "${HOST}" = "${PORT}" ] && PORT=80

  exec 3<>"/dev/tcp/${HOST}/$PORT"
  printf 'GET %s HTTP/1.0\r\nHost: %s\r\n\r\n' "${DOC}" "${HOST}" >&3
  (while read -r line; do
   [ "$line" = $'\r' ] && break
  done && cat) <&3
  exec 3>&-
}


mkdir -p $HOME/.config
mkdir -p $HOME/.local/bin
mkdir -p $HOME/.local/share

git submodule update --init

./.local/bin/stow.sh \
  -i $(basename $0) \
  -i .git \
  -i .gitmodules \
  -i .gitignore \
  -f

cat .tool-versions | cut -d' ' -f1 | grep "^[^\#]" | xargs -i .asdf/bin/asdf plugin add  {}
cat .tool-versions | cut -d' ' -f1 | grep "^[^\#]" | xargs -i .asdf/bin/asdf install {}
