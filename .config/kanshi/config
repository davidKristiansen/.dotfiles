
# include /etc/kanshi/config.d/*

profile {
    output eDP-1 enable
}

profile office {
    output eDP-1                           position 0,920    mode 1920x1080
    output "Unknown HP Z38c 6CM0141HKL"    position 1920,400 mode 3840x1600@29.998Hz
    output "Unknown HP Z27k G3 CN41363981" position 5760,0   mode 3840x2160@30Hz transform 90 scale 1.5
}

profile odin {
    output eDP-1  position 0,360 mode 1920x1080
    output "Sony SONY TV  *30 0x00000101" position 1920,0 mode 3840x2160 scale 2
}

profile thor {
    output eDP-1  position 0,360 mode 1920x1080
    output "Sony SONY TV  *00 0x00000101" position 1920,0 mode 3840x2160 scale 2
}
