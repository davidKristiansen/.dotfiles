set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term kitty

set $dmenu j4-dmenu-desktop --no-exec --dmenu="fzf --prompt='Run: ' --height 100% --cycle"
set $menu swaymsg 'exec $term --class __launcher -e $dmenu'


set $lock swaylock \
        --screenshots \
        --clock \
        --indicator \
        --indicator-radius 100 \
        --indicator-thickness 7 \
        --effect-blur 7x5 \
        --effect-pixelate 10 \
        --effect-vignette 0.5:0.5 \
        --ring-color b8bb26 \
        --key-hl-color 458588 \
        --line-color 00000000 \
        --inside-color 1d2021ef \
        --separator-color 00000000 \
        --grace 15 \
        --fade-in 10

set $screengrab slurp \
        | grim -g - - \
        | wl-copy

include colorscheme/gruvbox_dark_hard
include startup_applications
include input
include output
include functions
include keybindings
include bar
include ux
include scratchpad
include window_rules


include /etc/sway/config.d/*

